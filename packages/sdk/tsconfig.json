{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES7"],
    "rootDir": "./src",
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "composite": true
  },
  "include": ["src/**/*"]
}